# === Required (at least one LLM provider) ===
GOOGLE_API_KEY=
OPENROUTER_API_KEY=

# === Database ===
DATABASE_URL=sqlite+aiosqlite:///./timepoint.db

# === Auth (set AUTH_ENABLED=true for iOS app mode) ===
AUTH_ENABLED=false
JWT_SECRET_KEY=change-me-to-a-random-32-char-string
JWT_ACCESS_EXPIRE_MINUTES=15
JWT_REFRESH_EXPIRE_DAYS=30
APPLE_BUNDLE_ID=
SIGNUP_CREDITS=50
ADMIN_API_KEY=

# === Application ===
ENVIRONMENT=development
DEBUG=true
RATE_LIMIT=60

# === Blob Storage ===
BLOB_STORAGE_ENABLED=false
BLOB_STORAGE_ROOT=./output/timepoints

# === Observability (optional) ===
LOGFIRE_TOKEN=
